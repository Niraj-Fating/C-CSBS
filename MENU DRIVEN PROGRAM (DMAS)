#include <stdio.h>
int main() 
{
    float a,b;
    int ch;
    
    
    printf("1.To Add Two Numbers\n");
    printf("2.To Substract Two Numbers\n");
    printf("3.To Multiply Two Numbers\n");
    printf("4.To Divide Two Numbers\n");
    printf("5. EXIT\n");
    
    
    printf("\nEnter your Choice\n");
    scanf("%d",&ch);
    
    switch(ch)
    {
     case 1:printf("Enter any Two Numbers:\n");
            scanf("%f",&a);
            scanf("%f",&b);
            printf("%.2f + %.2f = %.2f",a,b,a+b);
     break;
     
    case 2:printf("Enter any Two Numbers:\n");
            scanf("%f",&a);
            scanf("%f",&b);
            printf("%.2f - %.2f = %.2f",a,b,a-b);
     break;
     
     case 3:printf("Enter any Two Numbers:\n");
            scanf("%f",&a);
            scanf("%f",&b);
            printf("%.2f * %.2f = %.2f",a,b,a*b);
     break;
     
    case 4:printf("Enter any Two Numbers:\n");
            scanf("%f",&a);
            scanf("%f",&b);
            printf("%.2f / %.2f = %.2f",a,b,a/b);
     break;
     
     case 5 :exit(0);
     break;
      
     default : printf("\nINVALID CHOICE");
    }
}
