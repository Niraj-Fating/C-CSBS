#include <stdio.h>
int main() 
{
    int i,j,sum,ch;
    int a[3][3];
    int b[3][3];
    int c[3][3];
    
    printf("1. To Multiply two matrices\n");
    printf("2. To Add two matrices\n");
    printf("3. EXIT");
    
    
    printf("\nEnter your Choice\n");
    scanf("%d",&ch);
    
    switch(ch)
    {
     case 1: printf("\nEnter any 3x3 Matrix");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             scanf("%d",&a[i][j]);
         }printf("\n");
     }
     printf("\nEntered matrix is \n");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             printf("%d \t",a[i][j]);
         }printf("\n");
     }printf("\n");
     
     printf("\nEnter any 3x3 Matrix");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             scanf("%d",&b[i][j]);
         }printf("\n");
     }
     printf("\nEntered matrix is \n");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             printf("%d \t",a[i][j]);
         }printf("\n");
     }printf("\n");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {  c[i][j]=a[i][j]*b[i][j];
             printf("%d  \t \t",c[i][j]);
         }printf("\n");
     }printf("\n");
     break;
     
    case 2: printf("\nEnter any 3x3 Matrix");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             scanf("%d",&a[i][j]);
         }printf("\n");
     }
     printf("\nEntered matrix is \n");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             printf("%d \t",a[i][j]);
         }printf("\n");
     }printf("\n");
     
     printf("\nEnter any 3x3 Matrix");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             scanf("%d",&b[i][j]);
         }printf("\n");
     }
     printf("\nEntered matrix is \n");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {
             printf("%d \t",a[i][j]);
         }printf("\n");
     }printf("\n");
     
     for(i=0;i<3;i++)
     {
         for(j=0;j<3;j++)
         {  c[i][j]=a[i][j]+b[i][j];
             printf("%d  \t \t",c[i][j]);
         }printf("\n");
     }printf("\n");
     break;
     
      case 3 : exit(0);
      break;
      
      default : printf("\nINVALID CHOICE");
    }
}
